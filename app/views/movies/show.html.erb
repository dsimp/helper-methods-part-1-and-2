<div>
  <div>
    <h1>
      Movie #<%= @movie.id %> details
    </h1>
    <div>
      <div>
        <%= link_to "Go back", movies_path%>
      </div>

      <div>
        <a href="<%= edit_movie_path(@movie) %>">
          Edit movie
        </a>
      </div>

      <div>
        <a href="<%= movie_path(@movie) %>" data-turbo-method="delete">
          Delete movie
        </a>
        <%# <%= link_to "Delete movie", movie_path(@movie)%> 
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @movie.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @movie.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@movie.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@movie.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>
